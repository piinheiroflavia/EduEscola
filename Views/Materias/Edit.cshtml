@model EduEscola.Models.Materia

@{
    ViewData["Title"] = "Editar";
}


<div class="page-content page-container" id="page-content" style="margin-top:50px">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="align-self-auto">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div class="col-sm-8">
                            <div class="card-block">
                                <form asp-action="Edit">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input type="hidden" asp-for="MateriaId" />
                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Editar Matéria</h6>
                                <div class="Col">

                                    <div class="row form-group">
                                        <p class="m-b-10 f-w-600">Nº da Professor: </p>   
                                            <select asp-for="ProfessorId" class="form-control" asp-items="ViewBag.ProfessorId">
                                            @*o foreach funciona para buscar a lista dos nomes e não do id's
                                            @foreach(var item in Model.Professors)
                                            {
                                                <option value="@item.ProfessorId">@item.Nome_Professor </option>
                                            }*@
                                            </select>
                                    </div>
                                    <br>
                                    <div class="row form-group">
                                        <p class="m-b-10 f-w-600">Turma: </p>   
                                            <select asp-for="TurmaId" class="form-control" asp-items="ViewBag.TurmaId">
                                            @*o foreach funciona para buscar a lista dos nomes e não do id's
                                            @foreach (var item in Model.Turmas)
                                            {
                                                <option value="@item.TurmaId">@item.CodigoTurma </option>
                                            }*@
                                        </select>
                                    </div>
                                    <br>
                                    <div class="row form-group">
                                        <p class="m-b-10 f-w-600">Matéria: </p>   
                                             <input asp-for="Nome_Materia" class="form-control" />
                                              <span asp-validation-for="Nome_Materia" class="text-danger"></span>
                                        </select>
                                    </div>
                                </div>
                                <br><br>
                                <div class="form-group">
									<a class="btn btn-dark" asp-action="Index" style=" color: #fff; background: #001B3D"> Voltar </a> |
									<input type="submit" value="Save" class="btn btn-primary" style=" color: #fff; background: #001B3D"/>
							    </div>
                                </form>                  
                 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



