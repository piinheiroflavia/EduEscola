@model EduEscola.Models.Materia

@{
    ViewData["Title"] = "Cadastrar";
}

<h4 style="margin-top:100px"> Cadastrar Matéria</h4>

<div class="row">

    <div class="row">
        <form class="row g-3" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-md-6">
                <label asp-for="ProfessorId" class="control-label">Professor</label>
                <select asp-for="ProfessorId" class="form-control" value="Selecionar" asp-items="ViewBag.ProfessorId">
                    @*o foreach funciona para buscar a lista dos nomes e não do id's*@
                    @foreach (var item in Model.Professorss)
                    {
                        
                        <option value="@item.ProfessorId">@item.Nome_Professor </option>
                    }
                </select>
            </div>
            <div class="col-md-6">
                <label asp-for="TurmaId" class="control-label">Turma</label>
                <select asp-for="TurmaId" class="form-control" value="Selecionar" asp-items="ViewBag.TurmaId">
                    @*o foreach funciona para buscar a lista dos nomes e não do id's*@
                    @foreach (var item in Model.Turmass)
                    {
                        
                        <option value="@item.TurmaId">@item.CodigoTurma </option>
                    }
                </select>
            </div>
            <div class="col-md-6">
                <label asp-for="Nome_Materia" class="control-label">Matéria</label>
                <input asp-for="Nome_Materia" id="materia" class="form-control" onkeyup="validaNomeMat()" onkeypress="return ApenasLetras(event,this)"  />
                <span asp-validation-for="Nome_Materia" class="text-danger"></span>
            </div>
            <br /><br />
            <div id="respErro" class="loader">
                <p></p>
            </div>
            <div id="respSucesso" class="loader">
                <p></p>
            </div>
            <div>
                <input type="submit" value="Enviar" class="btn" style="color: #fff; background: #001B3D" id="btn" onclick="validar()" disable />  |
                <a class="btn" asp-action="Index" style="color: #fff; background: #001B3D">Voltar</a>
            </div>
            
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/js/Materia.js"></script>