@model EduEscola.Models.Materia

@{
    ViewData["Title"] = "Details";
}

<div class="page-content page-container" id="page-content" style="margin-top:50px">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="align-self-auto">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25">
                                    <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius" alt="User-Profile-Image">
                                </div>
                                <h6 class="f-w-600">@Html.DisplayFor(model => model.Nome_Materia)</h6>

                                <p>Professor @Html.DisplayFor(model => model.Professors.Nome_Professor)</p>
                                <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Informações Pessoais</h6>
                                <div class="Col">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Matéria:</p>
                                        <h6 class="text-muted f-w-400"> @Html.DisplayFor(model => model.Nome_Materia)</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Professor:</p>
                                        <h6 class="text-muted f-w-400">@Html.DisplayFor(model => model.Professors.Nome_Professor)</h6>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <p class="m-b-10 f-w-600">Turma: </p>
                                    <h6 class="text-muted f-w-400"> @Html.DisplayFor(model => model.Turmas.CodigoTurma)</h6>
                                </div>
                                <div class="col-sm-6">
                                    <p class="m-b-10 f-w-600">Turno: </p>
                                    <h6 class="text-muted f-w-400"> @Html.DisplayFor(model => model.Turmas.Turno)</h6>
                                </div>
                                <div class="col-sm-6">
                                    <p class="m-b-10 f-w-600">Unidade: </p>
                                    <h6 class="text-muted f-w-400">@Html.DisplayFor(model => model.Turmas.Unidades.Nome_Unidade)</h6>
                                </div>                              
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <br /><br />
            <a class="btn btn-dark" asp-action="Index" style="margin-left:20px; color: #fff; background: #001B3D"> Voltar </a> |

    <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#exampleModall" style="color: #fff; background: #001B3D">
         Editar 
    </button> |
    <!-- Modal -->
    <div class="modal fade" id="exampleModall" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Editar</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="MateriaId" />
                                <div class="form-group">
                                    <label asp-for="ProfessorId" class="control-label"></label>
                                    <select asp-for="ProfessorId" class="form-control" asp-items="ViewBag.ProfessorId">
                                        @*o foreach funciona para buscar a lista dos nomes e não do id's*@
                                        @*@foreach (var item in Model.Professorss)
                                        {
                                            <option value="">Selecionar </option>
                                            <option value="@item.ProfessorId">@item.Nome_Professor </option>
                                        }*@
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TurmaId" class="control-label"></label>
                                    <select asp-for="TurmaId" class ="form-control" asp-items="ViewBag.TurmaId">
                                        @*o foreach funciona para buscar a lista dos nomes e não do id's*@
                                        @*@foreach (var item in Model.Turmass)
                                        {
                                            <option value="">Selecionar </option>
                                            <option value="@item.TurmaId">@item.CodigoTurma </option>
                                        }*@
                                    </select>
                                </div>
                                <div>
                                    <input type="submit" value="Create" class="btn " style="color: #fff; background: #001B3D" /> |
                                    <a class="btn " asp-action="Index" style="color: #fff; background: #001B3D">Voltar</a>
                                </div>
                            </form>
                        </div>
                    </div>
                    @section Scripts {
                        @{
                            await Html.RenderPartialAsync("_ValidationScriptsPartial");
                        }
                    }

                </div>
            </div>
        </div>
    </div>

    <!--EXCLUIR -->
            <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#exampleModal" style="color: #fff; background: #001B3D">
         Excluir 
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Excluir Aluno</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Tem certeza que deseja excluir @Html.DisplayFor(model => model.Nome_Materia)?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Fechar</button>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="MateriaId" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
    </div>
</div>


     

