@model EduEscola.Models.Aluno
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Informações";
}

<div class="page-content page-container" id="page-content" style="margin-top:50px">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="align-self-auto">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25">
                                    @if (Model.Genero_Aluno == "Masculino")
                                    {

                                        <img src="https://img.icons8.com/bubbles/100/null/man-in-red-glasses-and-yellow-shirt.png" class="img-radius" alt="User-Profile-Image" />

                                    }
                                    else if (Model.Genero_Aluno == "Feminino")
                                    {

                                        <img src="https://img.icons8.com/bubbles/100/null/brown-curly-hair-business-lady.png" class="img-radius" alt="User-Profile-Image" />
                                    }
                                    else if (Model.Genero_Aluno == "Outro")
                                    {
                                        <img src="https://img.icons8.com/bubbles/100/null/unisex.png" class="img-radius" alt="User-Profile-Image" />

                                    }
                                    else
                                    {
                                        <img src="https://icons8.com/icon/MjD9wmGLwhA2/user" class="img-radius" alt="User-Profile-Image">
                                    }
                                </div>
                                <h6 class="f-w-600">@Html.DisplayFor(model => model.NomeCompleto)</h6>

                                <p>Estudante</p>
                                <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Informações Pessoais</h6>
                                <div class="Col">
                                    <div class="row">
                                        <p class="m-b-10 f-w-600">Nome Completo:</p>
                                        <h6 class="text-muted f-w-400"> @Html.DisplayFor(model => model.NomeCompleto)</h6>
                                    </div>
                                    <div class="row">
                                        <p class="m-b-10 f-w-600">CPF:</p>
                                        <h6 class="text-muted f-w-400">@Html.DisplayFor(model => model.Cpf)</h6>
                                    </div>
                                </div>

                                @*<div class="row ">
                                    <p class="m-b-10 f-w-600">Sexo: </p>
                                    <h6 class="text-muted f-w-400"> @Html.DisplayFor(model => model.Genero_Aluno)</h6>
                                </div>*@
                                <div class="row ">
                                    <p class="m-b-10 f-w-600">Data de Nascimento</p>
                                    <h6 class="text-muted f-w-400"> @Html.DisplayFor(model => model.DataNascimento)</h6>
                                </div>


                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Informações Escolar</h6>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Matrícula</p>
                                        <h6 class="text-muted f-w-400"> @Html.DisplayFor(model => model.MatriculaAluno)</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Status da Matrícula</p>
                                        <h6 class="text-muted f-w-400"> @Html.DisplayFor(model => model.Status_Matricula)</h6>
                                    </div>

                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Turma</p>
                                        <h6 class="text-muted f-w-400">@Html.DisplayFor(model => model.Turmas.CodigoTurma)</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Turno</p>
                                        <h6 class="text-muted f-w-400">@Html.DisplayFor(model => model.Turmas.Turno)</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Unidade</p>
                                        <h6 class="text-muted f-w-400">@Html.DisplayFor(model => model.Turmas.Unidades.Nome_Unidade)</h6>
                                    </div>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <br /><br />
            <a class="btn btn-dark" asp-action="Index" style="margin-left:20px; color: #fff; background: #001B3D"> Voltar </a> |
 

                <!--EXCLUIR -->
            <button type="button" class="btn btn-dark" id="btn-excluir-aluno" data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="Apagar() " style="color: #fff; background: #001B3D">
                    Excluir
                </button>

                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Excluir Aluno</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p>Tem certeza que deseja excluir?</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Fechar</button>
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="IdAluno" />
                                    <input type="submit" value="Delete" class="btn btn-danger" />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


