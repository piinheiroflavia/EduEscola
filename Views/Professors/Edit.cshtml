@model EduEscola.Models.Professor

@{
    ViewData["Title"] = "Editar";
}

<div class="page-content page-container" id="page-content" style="margin-top:50px">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="align-self-auto">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25">
                                    @if (Model.Genero_Professor == "Masculino")
                                    {

                                        <img src="https://img.icons8.com/bubbles/100/null/man-in-red-glasses-and-yellow-shirt.png" class="img-radius" alt="User-Profile-Image" />

                                    }
                                    else if (Model.Genero_Professor == "Feminino")
                                    {

                                        <img src="https://img.icons8.com/bubbles/100/null/brown-curly-hair-business-lady.png" class="img-radius" alt="User-Profile-Image" />
                                    }
                                    else if (Model.Genero_Professor == "Outros")
                                    {
                                        <img src="https://img.icons8.com/bubbles/100/null/unisex.png" class="img-radius" alt="User-Profile-Image" />

                                    }
                                    else
                                    {
                                        <img src="https://icons8.com/icon/MjD9wmGLwhA2/user" class="img-radius" alt="User-Profile-Image">
                                    }
                                </div>
                                    <h6 class="f-w-600">@Html.DisplayFor(model => model.Nome_Professor)</h6>

                                <p>Professor(a)</p>
                                <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">

                                <form asp-action="Edit">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input type="hidden" asp-for="ProfessorId" />
                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Informações da Unidade</h6>
                                <div class="Col">

                                    <div class="row">
                                        <p class="m-b-10 f-w-600">Nome do Professor(a): </p>   
                                            <input asp-for="Nome_Professor" class="form-control" />
											<span asp-validation-for="Nome_Professor" class="text-danger"></span>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <p class="m-b-10 f-w-600">Email: </p>   
                                            <label asp-for="Email_Professor" class="control-label">Email: </label>
                                            <input asp-for="Email_Professor" class="form-control" />
                                            <span asp-validation-for="Email_Professor" class="text-danger"></span>
                                    </div>                    
                                    <br>
                                    <div class="row">
                                        <p class="m-b-10 f-w-600">Sexo: </p>   
                                            <select class="form-control" id="Genero_Professor" name="Genero_Professor">
                                                <option value="Masculino">Masculino</option>
                                                <option value="Feminino">Feminino</option>
                                                <option value="Outro">Outro</option>
                                            </select>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <p class="m-b-10 f-w-600">Nº Registro do Conselho: </p>   
                                            <input asp-for="Matricula_Professor" class="form-control" />
											<span asp-validation-for="Matricula_Professor" class="text-danger"></span>
                                    </div>
                                </div>
                                <br /><br />
                                <div class="form-group">
									<a class="btn btn-dark" asp-action="Index" style=" color: #fff; background: #001B3D"> Voltar </a> |
									<input type="submit" value="Save" class="btn btn-primary" style=" color: #fff; background: #001B3D"/>
							    </div>
                                </form>                  
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>


