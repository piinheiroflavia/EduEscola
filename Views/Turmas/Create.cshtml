@model EduEscola.Models.Turma

@{
    ViewData["Title"] = "Cadastrar ";
}


<h4 style="margin-top:100px"> Cadastrar Turma</h4>

<div class="row">

    <div class="row">
        <form class="row g-3" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-md-6">

                <label asp-for="CodigoTurma" class="control-label">Turma: </label>
                <input asp-for="CodigoTurma" id="turma" class="form-control" onkeyup="validaUnidade()" />
                <span asp-validation-for="CodigoTurma" class="text-danger"></span>

            </div>
            <div class="col-md-6">

                <label asp-for="UnidadeId" class="control-label">Unidade: </label>
                <select asp-for="UnidadeId" class="form-control" value="Selecionar" asp-items="ViewBag.UnidadeId">
                    @*o foreach funciona para buscar a lista dos nomes e não do id's*@
                    @foreach(var item in Model.Unidadess)
                    {
                        
                        <option value="@item.UnidadeId">@item.Nome_Unidade</option>
                    }
                </select>

            </div>
            <div class="col-md-6">
                <label asp-for="Turno" class="control-label">Turna: </label>
                <select asp-for="Turno" class="form-control">
                    <option value="">Selecionar </option>
                    <option value="Manhã">Manhã</option>
                    <option value="Tarde">Tarde</option>
                    <option value="Noite">Noite</option>
                </select>
                <span asp-validation-for="Turno" class="text-danger"></span>
            </div>
            <br /><br />
            <div id="respErro" class="loader">
                <p></p>
            </div>
            <div id="respSucesso" class="loader">
                <p></p>
            </div>
            <div>
                <input type="submit" value="Enviar" class="btn" style="color: #fff; background: #001B3D" id="btn" onclick="validar()" disable />  |
                <a class="btn" asp-action="Index" style="color: #fff; background: #001B3D">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/js/Turma.js"></script>