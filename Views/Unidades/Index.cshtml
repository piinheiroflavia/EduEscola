@model IEnumerable<EduEscola.Models.Unidade>


@{
    ViewData["Title"] = "Unidade";
}

<h1 style="margin-top:50px">Unidade</h1>

<nav class="navbar">
    <div class="container-fluid form-group justify-content-end">
        <form class="d-flex  " role="search" asp-action="Index" method="get">
            <input class="form-control me-2 form-control" name="Pesquisar" type="search" value="@ViewData["CurrentFilter"]" placeholder="Pesquisar unidade.." aria-label="Search">
            <button class="btn btn-outline-success" value="Search" type="submit">
                <span class="material-symbols-outlined" style="font-size: 1.4rem">
                    search
                </span>
            </button>
        </form>    
        <!--botao modal -->
        <button type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#create-modal" style="margin-left:10px">
                <span class="material-symbols-outlined" style="font-size: 1.4rem">
                    add
                </span>
            </button>

            <!-- Modal de criação -->
            <div class="modal fade" id="create-modal" tabindex="-1" aria-labelledby="create-modal-label" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="create-modal-label">Nova Unidade</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                        </div>
                        <form asp-action="Create" method="post">
                            <div class="modal-body">
                                <div class="form-group">
                                    <label for="Nome_Unidade">Nome da Unidade</label>
                                    <input type="text" class="form-control" id="Nome_Unidade" name="Nome_Unidade" required>
                                </div>
                                <div class="form-group">
                                    <label for="Endereco">Endereço</label>
                                    <input type="text" class="form-control" id="Endereco" name="Endereco" required>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                <button type="submit" class="btn btn-primary">Salvar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

   
    </div>
</nav>


<table class=" table bg-white table-bordered table-hover ">
    <thead>
        <tr class="table border-color-dark" style="color: #fff; background: #001B3D; border: solid 1px #001B3D;  ">
            <th>
                Unidade
                @*@Html.DisplayNameFor(model => model.Nome_Unidade)*@
            </th>
            <th>
                Diretor Responsável
                @*@Html.DisplayNameFor(model => model.Endereco)*@
            </th>
            <th>
                Endereço
                @*@Html.DisplayNameFor(model => model.Endereco)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody style="border-radius:8px ;box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;">
        @foreach (var unidade in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => unidade.Nome_Unidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => unidade.Nome_Diretor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => unidade.Endereco)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@unidade.UnidadeId" style="text-decoration:none">
                        <span class="material-symbols-outlined" style="color: #000 ">edit</span>
                    </a>
                    <a asp-action="Delete" asp-route-id="@unidade.UnidadeId" style="text-decoration:none">
                        <span class="material-symbols-outlined" style="color: #000 ">info</span>
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>
<h6>Total: @ViewBag.Quantidadee unidades </h6>