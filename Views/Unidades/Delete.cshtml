@model EduEscola.Models.Unidade

@{
    ViewData["Title"] = "Informações";
}

<div class="page-content page-container" id="page-content" style="margin-top:50px">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="align-self-auto">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25">
                                    @if (Model.Genero == "Masculino")
                                    {

                                        <img src="https://img.icons8.com/bubbles/100/null/man-in-red-glasses-and-yellow-shirt.png" class="img-radius" alt="User-Profile-Image" />
                                        
                                    }
                                    else if (Model.Genero == "Feminino")
                                    {

                                        <img src="https://img.icons8.com/bubbles/100/null/brown-curly-hair-business-lady.png" class="img-radius" alt="User-Profile-Image" />
                                    }
                                    else if (Model.Genero == "Outro")
                                    {
                                        <img src="https://img.icons8.com/bubbles/100/null/unisex.png" class="img-radius" alt="User-Profile-Image" />
                                       
                                    }
                                    else
                                    {
                                        <img src="https://icons8.com/icon/MjD9wmGLwhA2/user" class="img-radius" alt="User-Profile-Image">
                                    }
                                </div>
                                <h6 class="f-w-600"> Diretor(a) @Html.DisplayFor(model => model.Nome_Diretor)</h6>

                                <p>@Html.DisplayFor(model => model.Nome_Unidade)</p>
                                <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Informações da Unidade</h6>
                                <div class="Col">

                                    <div class="row">
                                        <p class="m-b-10 f-w-600">Unidade: </p>
                                        <h6 class="text-muted f-w-400"> @Html.DisplayFor(model => model.Nome_Unidade)</h6>
                                    </div>

                                    <div class="row">
                                        <p class="m-b-10 f-w-600">Endereço: </p>
                                        <h6 class="text-muted f-w-400">@Html.DisplayFor(model => model.Endereco)</h6>
                                    </div>

                                </div>
                               
                               
                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Cursos </h6>
                                <div class="row">

                                    @*ADICIONAR UMA LISTA DE CURSOS*@
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Cursos: </p>
                                        @*<h6 class="text-muted f-w-400"> @Html.DisplayFor(model => model.NomeCurso)</h6>*@
                                    </div>
                                    
                                </div>
                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Quantidade de Alunos </h6>
                                <div class="row">

                                    @*ADICIONAR UMA LISTA DE CURSOS*@
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Total: </p>
                                        @*<h6 class="text-muted f-w-400"> @Html.DisplayFor(model => model.NomeCurso)</h6>*@
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div>
    <br /><br />
    <a class="btn btn-dark" asp-action="Index" style="margin-left:20px; color: #fff; background: #001B3D"> Voltar </a> |

    <!--EXCLUIR -->
            <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#exampleModal" style="color: #fff; background: #001B3D">
         Excluir 
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Excluir Unidade</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Tem certeza que deseja excluir a @Html.DisplayFor(model => model.Nome_Unidade)?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Fechar</button>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="UnidadeId" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
